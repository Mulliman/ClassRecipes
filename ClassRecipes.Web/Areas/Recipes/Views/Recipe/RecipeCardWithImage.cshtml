@model ClassRecipes.Core.IRelatedRecipe

@using ClassRecipes.Web

@if(string.IsNullOrEmpty(Model.ThinImage))
{
    return;
}

<div class="card horizontal">
    <div class="card-image thin-image">
        @Html.RecipeImage(Model.ThinImage, Model.Title, "materialboxed")
        @*<img class="materialboxed" src="/img/chilli-syrup-vertical.jpg" />*@
    </div>
    <div class="card-stacked">
        <div class="card-content">
            <span class="card-title">@Model.Title</span>
            <p>@Model.ShortIntro</p>
        </div>
    </div>
</div>