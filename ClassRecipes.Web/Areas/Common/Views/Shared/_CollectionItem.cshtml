@model ClassRecipes.Web.Areas.Common.Models.CollectionItemModel

@if(Model == null)
{
    return;
}

@if(string.IsNullOrWhiteSpace(Model.Label))
{
    <li href="#!" class="collection-item">@Model.Text</li>
}
else
{
    <li href="#!" class="collection-item"><span title="@Model.Title" class="badge">@Model.Label</span>@Model.Text</li>
}